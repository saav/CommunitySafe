<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        form {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f2f2f2;
  border-radius: 10px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}

label, input, textarea {
  display: block;
  width: 100%;
  margin-bottom: 10px;
}

label {
  font-weight: bold;
}

input, textarea {
  padding: 10px;
  border: none;
  border-radius: 5px;
}

button {
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

button:hover {
  background-color: #3e8e41;
}
form{
    height: 340px;
    width: 60%;
    position: absolute;
    top: 50%;
    left:50%;
    transform: translate(-50%, -50%);
}

    </style>
</head>
<body>



  












    <form id="donation-form" action="https://submit-form.com/TTfUWGAM"
  method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" required>

  <label for="phone">Phone Number:</label>
  <input type="tel" id="phone" name="phone" pattern="[0-9]{10}" required>

  <label for="address">Address:</label>
  <textarea id="address" name="address" required></textarea>

  <label for="people">Number of People:</label>
  <input type="number" id="people" name="people" min="1" required>

  <button type="submit">Donate Now</button>
</form>

</body>
<script>
    const form = document.getElementById('donation-form');
const nameInput = document.getElementById('name');
const phoneInput = document.getElementById('phone');
const addressInput = document.getElementById('address');
const peopleInput = document.getElementById('people');

form.addEventListener('submit', function(event) {
  event.preventDefault();

  const name = nameInput.value.trim();
  const phone = phoneInput.value.trim();
  const address = addressInput.value.trim();
  const people = peopleInput.value.trim();

  // Validate name field
  if (name === '') {
    setErrorFor(nameInput, 'Name cannot be blank');
    return;
  } else if (name.length < 2) {
    setErrorFor(nameInput, 'Name must be at least 2 characters long');
    return;
  }

  // Validate phone field
  if (phone === '') {
    setErrorFor(phoneInput, 'Phone number cannot be blank');
    return;
  } else if (!isValidPhone(phone)) {
    setErrorFor(phoneInput, 'Invalid phone number format');
    return;
  }

  // Validate address field
  if (address === '') {
    setErrorFor(addressInput, 'Address cannot be blank');
    return;
  }

  // Validate people field
  if (people === '') {
    setErrorFor(peopleInput, 'Number of people cannot be blank');
    return;
  } else if (people < 1) {
    setErrorFor(peopleInput, 'Number of people must be at least 1');
    return;
  }

  // TODO: send donation data to server or perform other action

  // Show success message
  alert("Thank you for your donation, " + name + "! We appreciate your support.");

  // Clear form fields
  form.reset();
  
});

function setErrorFor(input, errorMessage) {
  const formGroup = input.parentElement;
  const errorElement = formGroup.querySelector('.error-message');

  formGroup.classList.add('error');
  errorElement.innerText = errorMessage;
}

function isValidPhone(phone) {
  const phonePattern = /^\d{10}$/;
  return phonePattern.test(phone);
}

</script>
</html>