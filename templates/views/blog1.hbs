    <style>
        /* Declaring Custom Properties */
:root {
    /* Font Settings */
    --font: 1em/1.5 'Avenir Next', -apple-system, 'Helvetica Neue', Arial, sans-serif;
    --font-serif: Palatino, Georgia, 'Times New Roman', serif;
    --font-bold: 600;
    --heading-line-height: 1.1;
    
    /* Layout */
    --layout: grid;
    --spacing-half: .75em;
    --spacing-default: 1.5em;
    --spacing-double: 3em;
    
    /* Widths */
    --page-width: 80em; /* 1280px */
    --post-width: 50em; /* 800px */
    
    /* Colors */
    --background: #fafbfc;
    --text: #242526;
    --primary-color: cornflowerblue;
    --secondary-color: forestgreen;
    --tertiary-color: tomato;
}

/* Setting fallback defaults for IE */
html {
    font: 1em/1.5 'Avenir Next', -apple-system, 'Helvetica Neue', Arial, sans-serif;
    text-rendering: optimizelegibility;
    background: #fafbfc;
    color: #232425;
}

body {
    box-sizing: border-box;
    margin: 0 auto;
    padding: 0;
}

body * {
    box-sizing: border-box;
}

h2 {
    font-size: 2.0em;
}

h3 {
    font-size: 1.5em;
}

p {
    font-size: 1.0em;
    margin: 0;
}

p + p {
    margin-top: 1.5em;
}

em,
i{
    font-style: italic;
}

blockquote,
figure {
    margin: 3em 0;
}

blockquote {
    font-family: Palatino, Georgia, 'Times New Roman', serif;
    font-size: 1.125em;
    border-left: .25em solid #acaeab;
    padding: 1em 1em 1em 1.5em;
    background: #edefec;
    border-radius: .25em;
}

blockquote > * {
    margin-top: 0;
}

blockquote :last-child {
    margin-bottom: 0;
}

img {
    height: 600px;
    
}


/* Main */
main {
    display: block; /* IE */
    margin: 4em auto;
    max-width: 50em;
}

/* Modern Browsers get custom properties to play with. */
@supports(--font: 1em) {
    body {
        font: var(--font);
        max-width: var(--page-width);
        background: var(--background);
        color: var(--text);
    }
    
    h2,
    h3,
    strong,
    th {
        font-weight: var(--font-bold);
    }
    
    h2,
    h3{
        line-height: var(--heading-line-height);
    }
    
    
    /* Main */
    main {
        max-width: var(--post-width);
    }
    }

@supports(grid-gap: 1em) {
    body {
        font-size: calc(1rem + 1vh);
        display: var(--layout);
        grid-gap: var(--spacing-double) var(--spacing-default);
        grid-template-columns: repeat(12, 1fr);
        max-width: 100%;
    }
    
    body > * {
        margin: 0;
    }
    
    
    main {
        grid-column: 1 / -1;
        margin: 0;
        max-width: 100%;
    }

    article {
        display: var(--layout);
        grid-row-gap: var(--spacing-default);
        grid-template-columns: repeat(16, 1fr);
    }
    
    article > * {
        grid-column: 4 / 12;
        margin: 0;
    }
    
    article p + p {
        margin: 0;
    }
    
    article .introduction {
        font-size: 1.25rem;
        display: var(--layout);
        grid-row-gap: var(--spacing-default);
        grid-column: 2 / span 8;
        margin-bottom: var(--spacing-double);
    }
    
    .introduction > * {
        margin: 0;
    }
    
    article > figure {
        display: var(--layout);
        grid-template-columns: repeat(16, 1fr);
        grid-column: 1 / -1;
        margin-bottom: var(--spacing-default);
    }
    
    article > blockquote {
        margin: var(--spacing-half) 0;
    }
    
    figcaption {
        grid-column: 4 / -4;
    }
    
    img {
        grid-column: 2 / -2;
        {{!-- max-height: 50%;
        max-width: 70%; --}}
        
    }
    
    blockquote {
        grid-column: 3 / -3;
    }
    
    @media (max-width: 75em) {
        body {
            font-size: calc(1em + .5vh);
        }
        
        article > * {
            grid-column: 4 / -4;
        }
        
        article .introduction {
            font-size: 1.125rem;
            grid-column: 2 / -4;
        }
        
        article > figure {
            grid-column: 2 / -2;
        }
        
        img {
            grid-column: 1 / -1;
        }
        
        figcaption,
        blockquote {
            grid-column: 2 / -2;
        }
    }
    .sk{
        width: 90%;
        height: 70%;
    }
}
